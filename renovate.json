{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "reviewers": [
    "aaroncawte"
  ],
  "schedule": [
    "every wednesday"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeStrategy": "merge-commit"
    },
    {
      "packageNames": [
        "@typescript-eslint/parser"
      ],
      "upgradeTypes": [
        "minor"
      ],
      "automerge": true,
      "automergeStrategy": "merge-commit"
    }
  ]
}
